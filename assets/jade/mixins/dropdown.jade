//---------------------------
//- Dropdown Split
//---------------------------
mixin dropdownSplit( num )
	- id = id ? id : randInt( 1, 1000 );
	- attributes.class = attributes.class ? attributes.class : "btn-default";
	
	.btn-group
		+btn()&attributes( attributes )
		+dropdownButton( id )(class="dropdown-toggle with-caret-e")&attributes( attributes )
			span.sr-only Toggle Dropdown
		+dropdownMenu( num, id )
		
//- Dropdown Split Primary
//---------------------------
mixin dropdownSplitPrimary( num )
	+dropdownSplit( num )(class="btn-primary")
		
//- Dropdown Split Success
//---------------------------
mixin dropdownSplitSuccess( num )
	+dropdownSplit( num)(class="btn-success")
		
