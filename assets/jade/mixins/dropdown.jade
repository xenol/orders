//---------------------------
//- Dropdown
//---------------------------
mixin dropdown( num, id )
	- id = id ? id : randInt( 1, 1000 );
	
	.dropdown
		+dropdownButton( id )&attributes( attributes )
		
		- if( block )
			block
			
		- else
			+dropdownMenu( num, id )
			
//- Dropdown Button
//---------------------------
mixin dropdownButton( id )
	- id = id ? id : randInt( 1, 1000 );
	
	+btn("btn-default dropdown-toggle with-caret")(
		data-toggle= "dropdown"
		aria-haspopup= "true"
		aria-expanded= "false"
		id= "dropdownMenu" + id
	)&attributes( attributes )
		- if( block )
			block
		- else
			| #{loremIpsum(10)}
			
//- Dropdown Menu
//---------------------------
mixin dropdownMenu( num, id )
	+ul( num )(
		class="dropdown-menu"
		aria-labelledby="dropdownMenu" + id
	)
		- if( block )
			block
		- else
			+li(): +a() #{loremIpsum(15)}

