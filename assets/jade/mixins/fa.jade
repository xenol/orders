//- Font Awesome mixin
//--------------------------------------
mixin faRand( className )
	+fa( faRand() + ( className ? " " + className : "") )
	
	- if( block )
		block
			
			
//- Font Awesome footer
//--------------------------------------
mixin faFooter( className )
	footer.fa-footer( class= className ? className : "" )&attributes( attributes )
		- if( block )
			block
		- else
			+faDate()
			+faComments()
			+faViews()