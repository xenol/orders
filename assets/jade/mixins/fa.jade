//- Stacked Icons
//--------------------------------------
//- Font Awesome Stack mixin
//--------------------------------------
mixin faStack( className2x, className1x, classNameStack )
	- var defaults = {};
		- defaults.className2x = className2x ? className2x : "fa-circle";
		- defaults.className1x = className1x ? className1x : faRand() + " fa-inverse";
		- defaults.classNameStack = classNameStack ? classNameStack : "fa-lg";
		
	- attributes = jsonMerge(attributes, defaults);
	
	span.fa-stack( class= attributes.classNameStack ? attributes.classNameStack : "" )
		+fa( "fa-stack-2x " + attributes.className2x )
		+fa( "fa-stack-1x " + attributes.className1x )
		
	- if( block )
		block

