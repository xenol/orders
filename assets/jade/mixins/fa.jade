//- Font Awesome mixin
//--------------------------------------
mixin fa( className, tag )
	- var defaults = {};
		- defaults["aria-hidden"] = "true";
		- defaults.class = className ? className : faRand();
		
	- attributes = jsonMerge(attributes, defaults);
		
	#{tag ? tag : "i"}.fa&attributes( attributes )

	- if( block )
		block

