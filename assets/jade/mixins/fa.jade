//- Frequency fa mixins
//--------------------------------------
//- Fa Span mixin
//--------------------------------------
mixin faSpan( classFa, classSpan, title )
	- var defaults = {};
		- defaults.classFa = classFa ? classFa : faRand() + " warning";
		- defaults.classSpan = classSpan ? classSpan : "footer-elem";
		- defaults.title = title ? title : false;
		
	- attributes = jsonMerge(attributes, defaults);
		
	span( class= defaults.classSpan title= attributes.title )
		+fa( attributes.classFa )
		
		- if( block )
			block
		- else
			| #{loremIpsum(10)}
			
//- Fa Link mixin
//--------------------------------------
mixin faLink( classFa, classLink, title )
	- var defaults = {};
		- defaults.classFa = classFa ? classFa : faRand() + " warning";
		- defaults.classLink = classLink ? classLink : "_u footer-elem";
		- defaults.title = title ? title : false;
		
	- attributes = jsonMerge(attributes, defaults);
		
	+a()&attributes({ class: attributes.classLink, title: attributes.title })
		+fa(attributes.classFa)
		
		- if( block )
			block
		- else
			| #{loremIpsum(10)}
			
//- Fa Date mixin
//--------------------------------------
mixin faDate( classFa, title )
	- var defaults = {};
		- defaults.classFa = classFa ? classFa : "fa-calendar-o warning";
		- defaults.title = title ? title : "Дата публикации: " + randInt(10,31) + " декабря 2016";
		
	- attributes = jsonMerge(attributes, defaults);
		
	+faSpan()&attributes( attributes )
		- if( block )
			block
		- else
			| #{randInt(10,31)} декабря
			
