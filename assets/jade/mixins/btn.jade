//- Btn mixin
//---------------------------
mixin btn( className )
	- var defaults = {};
		- defaults.class = className ? className : "btn-default";
		- defaults.role = "button";
	
	+a()( class= "btn" )&attributes( jsonMerge(attributes, defaults) )
		- if( block )
			block
