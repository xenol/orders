//---------------------------
mixin buttonDismissible( className )
	- var defaults = {};
		- defaults["aria-label"] = "Закрыть";
		- defaults.class = className ? className : "";
		- defaults["data-dismiss"] = "alert";
	
	+button()(class= "close")&attributes( jsonMerge(attributes, defaults) )
		- if( block )
			block
		- else
			span( aria-hidden="true" ) &times;

